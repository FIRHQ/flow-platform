<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.flow.platform.domain">
    <class name="Agent" table="agent">
        <composite-id name="path" class="AgentPath">
            <key-property name="name" type="string" column="agent_name"/>
            <key-property name="zone" type="string" column="agent_zone"/>
        </composite-id>

        <property name="createdDate" type="date" column="created_date"/>
        <property name="updatedDate" type="date" column="updated_date"/>
        <property name="concurrentProc" column="concurrent_proc"></property>
        <property name="sessionId" column="session_id"></property>
        <property name="sessionDate" column="session_date"></property>

        <property name="status" column="status">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">com.flow.platform.domain.AgentStatus</param>
                <param name="useNamed">true</param>
            </type>
        </property>
    </class>
</hibernate-mapping>